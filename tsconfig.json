{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "tsc-compiled",
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "strict": false, // todo
    "importHelpers": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "types": [
      "reflect-metadata",
      "node"
    ],
    "paths": {
      "packages/*": ["packages/*"]
    },
    "lib": ["es2017", "dom"]
  },
  "files": [
    "vue-shims.d.ts"
  ],
  "include": [
    "packages/**/*.ts",
    "packages/**/*.vue",
    "demo/**/*.ts",
    "demo/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
